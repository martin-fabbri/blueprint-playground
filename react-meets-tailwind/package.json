{
  "name": "react-meets-tailwind",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "react": "^16.3.2",
    "react-dom": "^16.3.2",
    "react-scripts-ts": "2.15.1"
  },
  "scripts": {
    "start": "npm run tailwind:css && react-scripts-ts start",
    "build": "npm run tailwind:css && react-scripts-ts build",
    "test": "react-scripts-ts test --env=jsdom",
    "eject": "react-scripts-ts eject",
    "tailwind:css" : "tailwind build src/css/tailwind.src.css -c  tailwind.js -o src/css/tailwind.css"
  },
  "devDependencies": {
    "@types/jest": "^22.2.3",
    "@types/node": "^10.0.8",
    "@types/react": "^16.3.14",
    "@types/react-dom": "^16.0.5",
    "typescript": "^2.8.3",
    "tailwindcss": "^0.5.3"
  }
}
